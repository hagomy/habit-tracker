<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_item_habit_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_habit_background" />

    <TextView
        android:id="@+id/tv_item_habit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_item_habit_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_habit_checked_background"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_item_habit_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_habit_drag_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_item_habit_title_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_item_habit_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end|bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/iv_item_habit_last"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_add"
        android:tint="@color/colorWhite"
        android:visibility="gone" />
</FrameLayout>